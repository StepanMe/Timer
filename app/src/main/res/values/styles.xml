<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActiveButtonStyle" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/button_background_active</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="InactiveButtonStyle" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/button_background_inactive</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

</resources>
